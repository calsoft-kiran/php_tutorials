{% extends 'base.html.twig' %}

{% block title %}AircraftDetails index{% endblock %}

{% block body %}
    <h1>AircraftDetails index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Details</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aircraft_detail in aircraft_details %}
            <tr>
                <td>{{ aircraft_detail.id }}</td>
                <td>{{ aircraft_detail.details }}</td>
                <td>
                    <a href="{{ path('app_aircraft_details_show', {'id': aircraft_detail.id}) }}">show</a>
                    <a href="{{ path('app_aircraft_details_edit', {'id': aircraft_detail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_aircraft_details_new') }}">Create new</a>
{% endblock %}
